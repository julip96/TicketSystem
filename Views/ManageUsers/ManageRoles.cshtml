@model TicketSystem.Models.ManageRolesViewModel

<h2>Manage Roles</h2>

<form asp-action="ManageRoles" method="post">
    <input type="hidden" asp-for="UserId" />

    <div>
        <p>User: @User.Identity.Name</p>
    </div>

    <div class="form-group">
        <label asp-for="SelectedRoles">Select Roles:</label>
        <select asp-for="SelectedRoles" asp-items="new SelectList(Model.AllRoles.Select(r => r.Name))" class="form-control" multiple></select>
    </div>

    <button type="submit" class="btn btn-primary">Save Roles</button>
</form>
