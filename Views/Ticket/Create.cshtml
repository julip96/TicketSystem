
@model Ticket 

<form method="post">
	<div class="border p-3 mt-4">
		<div class="row pb-2">
			<h2>Create Ticket</h2>
			<hr />
		</div>
@* 		<div asp-validation-summary="All"></div> *@
		<div class="mb-3">
			<label asp-for="TicketSubject"></label>
			<input asp-for="TicketSubject" class="form-control"/>
			<span asp-validation-for="TicketSubject" class="text-danger"></span>
		</div>
		<div class="mb-3">
			<label asp-for="TicketContent"></label>
			<input asp-for="TicketContent" class="form-control"/>
			<span asp-validation-for="TicketContent" class="text-danger"></span>
		</div>
		<button type="submit" class="btn btn-outline-primary" style="width:150px">Create</button>
		<a asp-controller="Ticket" asp-action="Index" class="btn btn-outline-secondary" style="width:150px">
			Back to List
		</a>
	</div>
</form>